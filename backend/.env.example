# PostgreSQL Database Configuration
# For local PostgreSQL:
DB_HOST=localhost
DB_PORT=5432
DB_NAME=healthcare_db
DB_USER=postgres
DB_PASSWORD=postgres

# For GCP Cloud SQL:
# Option 1: Public IP with SSL
# DB_HOST=<your-gcp-instance-public-ip>
# DB_PORT=5432
# DB_NAME=healthcare_db
# DB_USER=postgres
# DB_PASSWORD=<your-password>
# DB_SSL=require  # Options: require, verify-ca, verify-full, or leave empty for no SSL

# Option 2: Cloud SQL Proxy (recommended)
# Run: cloud-sql-proxy <INSTANCE_CONNECTION_NAME> --port 5432
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_NAME=healthcare_db
# DB_USER=postgres
# DB_PASSWORD=<your-password>
# DB_SSL=  # Leave empty when using Cloud SQL Proxy

# Connection pool and timeout settings
DB_POOL_MIN_SIZE=10
DB_POOL_MAX_SIZE=20
DB_TIMEOUT=60
DB_COMMAND_TIMEOUT=60

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Environment
ENVIRONMENT=development
